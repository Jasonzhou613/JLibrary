<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/photo_albumback">

    <include layout="@layout/title_bar"/>

    <RelativeLayout
        android:id="@+id/llyBottomView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black">

        <Button
            android:id="@+id/btnOK"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:text="@string/finish"/>
    </RelativeLayout>

    <com.ttsea.jlibrary.photo.gallery.ViewPagerFixed
        android:id="@+id/viwePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llyBottomView"
        android:layout_below="@+id/llyTitleBar"
        android:layout_centerHorizontal="true"
        android:background="@color/photo_black"
        android:unselectedAlpha="1">
    </com.ttsea.jlibrary.photo.gallery.ViewPagerFixed>

</RelativeLayout>