<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black">

    <include layout="@layout/title_bar_left"/>

    <com.ttsea.jlibrary.photo.gallery.ViewPagerFixed
        android:id="@+id/viwePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llyTitleBar"
        android:layout_centerHorizontal="true"
        android:background="@color/photo_black"
        android:unselectedAlpha="1"/>

    <LinearLayout
        android:id="@+id/llyBottomView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#DD373C3D"
        android:gravity="right|center_vertical">

        <LinearLayout
            android:id="@+id/llyCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivCheck"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="@string/image_choice"
                android:textColor="#FFCFCFCF"
                android:textSize="14sp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>