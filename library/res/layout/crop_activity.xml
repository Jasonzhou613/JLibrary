<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:juility="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <include
        android:id="@+id/titleBar"
        layout="@layout/title_bar"/>

    <LinearLayout
        android:id="@+id/llyBottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/translucentBC">

        <LinearLayout
            android:id="@+id/llyCropCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_crop_cancel"/>
        </LinearLayout>

        <View
            android:layout_width="0.333dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/translucentCD"/>

        <LinearLayout
            android:id="@+id/llyCropSure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_crop_sure"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llyBottom"
        android:layout_below="@id/titleBar">

        <com.ttsea.jlibrary.photo.crop.CropImageView
            android:id="@+id/ivCropImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            juility:canRotate="true"
            juility:canScale="true"
            juility:canTranslate="true"/>

        <com.ttsea.jlibrary.photo.crop.CropView
            android:id="@+id/cropView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            juility:cropMode="rectangle"
            juility:fixedAspectRatio="true"

            juility:frameLineColor="#FF00CC00"
            juility:frameLineShowMode="show_always"
            juility:frameLineWidth="1.66dp"
            juility:frameShadowColor="@color/translucent99"

            juility:gridColumnCount="2"
            juility:gridLineColor="#FF00CC00"
            juility:gridLineShowMode="show_on_touch"
            juility:gridLineWidth="1dp"
            juility:gridRowCount="2"

            juility:handleLineColor="#FF00CC00"
            juility:handleLineLength="20dp"
            juility:handleLineShowMode="show_always"
            juility:handleLineWidth="2dp"

            juility:minFrameWidth="4dp"/>
    </FrameLayout>

</RelativeLayout>
