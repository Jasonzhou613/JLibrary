<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CropView">
        <!-- 剪切模式 -->
        <attr name="cv_cropMode" format="integer">
            <enum name="rectangle" value="1"/>
            <enum name="oval" value="2"/>
        </attr>

        <!-- 剪切边框的显示模式 -->
        <attr name="cv_frameLineShowMode" format="integer">
            <enum name="not_show" value="1"/>
            <enum name="show_always" value="2"/>
            <enum name="show_on_touch" value="3"/>
        </attr>
        <!-- 剪切边框的颜色 -->
        <attr name="cv_frameLineColor" format="color"/>
        <!-- 剪切边框的宽度 -->
        <attr name="cv_frameLineWidth" format="dimension"/>

        <!-- 四个角的手柄线显示模式 -->
        <attr name="cv_handleLineShowMode" format="integer">
            <enum name="not_show" value="1"/>
            <enum name="show_always" value="2"/>
            <enum name="show_on_touch" value="3"/>
        </attr>
        <!-- 四个角的手柄线的颜色 -->
        <attr name="cv_handleLineColor" format="color"/>
        <!-- 四个角的手柄线的宽度 -->
        <attr name="cv_handleLineWidth" format="dimension"/>
        <!-- 四个角的手柄线的高度 -->

        <attr name="cv_handleLineLength" format="dimension"/>
        <!-- 网格线的显示模式 -->
        <attr name="cv_gridLineShowMode" format="integer">
            <enum name="not_show" value="1"/>
            <enum name="show_always" value="2"/>
            <enum name="show_on_touch" value="3"/>
        </attr>
        <!-- 网格线的颜色 -->
        <attr name="cv_gridLineColor" format="color"/>
        <!-- 网格线的宽度 -->
        <attr name="cv_gridLineWidth" format="dimension"/>
        <!-- 网格线的行数 -->
        <attr name="cv_gridRowCount" format="integer"/>
        <!-- 网格线的列数 -->
        <attr name="cv_gridColumnCount" format="integer"/>

        <!-- 剪切时阴影部分的颜色 -->
        <attr name="cv_frameShadowColor" format="color"/>

        <!-- 按住剪切框中间，是否可以拖动 -->
        <attr name="cv_canMoveFrame" format="boolean"/>
        <!-- 按住剪切框四个角，是否可以拖动剪切框的四个角 -->
        <attr name="cv_canDragFrameConner" format="boolean"/>
        <!-- 是否需要保持长宽比，只有当canDragFrameConner为true时才生效 -->
        <attr name="cv_fixedAspectRatio" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TransformImageView">
        <!-- 是否允许缩放 -->
        <attr name="canScale" format="boolean"/>
        <!-- 是否允许旋转 -->
        <attr name="canRotate" format="boolean"/>
        <!-- 是否允许移动 -->
        <attr name="canTranslate" format="boolean"/>
    </declare-styleable>

    <!-- com.ttsea.jlibrary.component.widget.roundImage.RoundedImageView attrs start -->
    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension"/>
        <attr name="riv_corner_radius_top_left" format="dimension"/>
        <attr name="riv_corner_radius_top_right" format="dimension"/>
        <attr name="riv_corner_radius_bottom_left" format="dimension"/>
        <attr name="riv_corner_radius_bottom_right" format="dimension"/>
        <attr name="riv_border_width" format="dimension"/>
        <attr name="riv_border_color" format="color"/>
        <attr name="riv_mutate_background" format="boolean"/>
        <attr name="riv_oval" format="boolean"/>
        <attr name="android:scaleType"/>
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0"/>
            <enum name="repeat" value="1"/>
            <enum name="mirror" value="2"/>
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0"/>
            <enum name="repeat" value="1"/>
            <enum name="mirror" value="2"/>
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0"/>
            <enum name="repeat" value="1"/>
            <enum name="mirror" value="2"/>
        </attr>
    </declare-styleable>
    <!-- com.ttsea.jlibrary.component.widget.roundImage.RoundedImageView attrs end -->

    <!-- com.ttsea.jlibrary.component.widget.SmoothCheckBox attrs start -->
    <declare-styleable name="SmoothCheckBox">
        <attr name="scb_strokeWidth" format="dimension"/>
        <attr name="scb_strokeUncheckedColor" format="color"/>
        <attr name="scb_solidUncheckedColor" format="color"/>
        <attr name="scb_strokeCheckedColor" format="color"/>
        <attr name="scb_solidCheckedColor" format="color"/>
        <attr name="scb_tickWidth" format="dimension"/>
        <attr name="scb_tickColor" format="color"/>
        <attr name="scb_duration" format="integer"/>
        <attr name="scb_type">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
        </attr>
        <attr name="scb_radius" format="dimension"/>
        <attr name="scb_shouldAnimate" format="boolean"/>
        <attr name="scb_checked" format="boolean"/>
        <!-- 透明度，取值0~255 -->
        <attr name="scb_alpha" format="integer"/>
    </declare-styleable>
    <!-- com.ttsea.jlibrary.component.widget.SmoothCheckBox attrs start -->

</resources>