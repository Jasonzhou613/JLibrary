<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CropView">
        <!-- 剪切模式 -->
        <attr name="cropMode" format="integer">
            <enum name="rectangle" value="1"/>
            <enum name="oval" value="2"/>
        </attr>

        <!-- 剪切边框的显示模式 -->
        <attr name="frameLineShowMode" format="integer">
            <enum name="not_show" value="1"/>
            <enum name="show_always" value="2"/>
            <enum name="show_on_touch" value="3"/>
        </attr>
        <!-- 剪切边框的颜色 -->
        <attr name="frameLineColor" format="color"/>
        <!-- 剪切边框的宽度 -->
        <attr name="frameLineWidth" format="dimension"/>

        <!-- 四个角的手柄线显示模式 -->
        <attr name="handleLineShowMode" format="integer">
            <enum name="not_show" value="1"/>
            <enum name="show_always" value="2"/>
            <enum name="show_on_touch" value="3"/>
        </attr>
        <!-- 四个角的手柄线的颜色 -->
        <attr name="handleLineColor" format="color"/>
        <!-- 四个角的手柄线的宽度 -->
        <attr name="handleLineWidth" format="dimension"/>
        <!-- 四个角的手柄线的高度 -->

        <attr name="handleLineLength" format="dimension"/>
        <!-- 网格线的显示模式 -->
        <attr name="gridLineShowMode" format="integer">
            <enum name="not_show" value="1"/>
            <enum name="show_always" value="2"/>
            <enum name="show_on_touch" value="3"/>
        </attr>
        <!-- 网格线的颜色 -->
        <attr name="gridLineColor" format="color"/>
        <!-- 网格线的宽度 -->
        <attr name="gridLineWidth" format="dimension"/>
        <!-- 网格线的行数 -->
        <attr name="gridRowCount" format="integer"/>
        <!-- 网格线的列数 -->
        <attr name="gridColumnCount" format="integer"/>

        <!-- 剪切时阴影部分的颜色 -->
        <attr name="frameShadowColor" format="color"/>

        <!-- 按住剪切框中间，是否可以拖动 -->
        <attr name="canMoveFrame" format="boolean"/>
        <!-- 按住剪切框四个角，是否可以拖动剪切框的四个角 -->
        <attr name="canDragFrameConner" format="boolean"/>
        <!-- 是否需要保持长宽比，只有当canDragFrameConner为true时才生效 -->
        <attr name="fixedAspectRatio" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TransformImageView">
        <!-- 是否允许缩放 -->
        <attr name="canScale" format="boolean"/>
        <!-- 是否允许旋转 -->
        <attr name="canRotate" format="boolean"/>
        <!-- 是否允许移动 -->
        <attr name="canTranslate" format="boolean"/>
    </declare-styleable>

    <!-- com.ttsea.jlibrary.component.widget.roundImage.RoundedImageView attrs start -->
    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension"/>
        <attr name="riv_corner_radius_top_left" format="dimension"/>
        <attr name="riv_corner_radius_top_right" format="dimension"/>
        <attr name="riv_corner_radius_bottom_left" format="dimension"/>
        <attr name="riv_corner_radius_bottom_right" format="dimension"/>
        <attr name="riv_border_width" format="dimension"/>
        <attr name="riv_border_color" format="color"/>
        <attr name="riv_mutate_background" format="boolean"/>
        <attr name="riv_oval" format="boolean"/>
        <attr name="android:scaleType"/>
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0"/>
            <enum name="repeat" value="1"/>
            <enum name="mirror" value="2"/>
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0"/>
            <enum name="repeat" value="1"/>
            <enum name="mirror" value="2"/>
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0"/>
            <enum name="repeat" value="1"/>
            <enum name="mirror" value="2"/>
        </attr>
    </declare-styleable>
    <!-- com.ttsea.jlibrary.component.widget.roundImage.RoundedImageView attrs end -->

    <!-- com.ttsea.jlibrary.component.widget.SmoothCheckBox attrs start -->
    <declare-styleable name="SmoothCheckBox">
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeUncheckedColor" format="color"/>
        <attr name="solidUncheckedColor" format="color"/>
        <attr name="strokeCheckedColor" format="color"/>
        <attr name="solidCheckedColor" format="color"/>
        <attr name="tickWidth" format="dimension"/>
        <attr name="tickColor" format="color"/>
        <attr name="duration" format="integer"/>
        <attr name="type">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
        </attr>
        <attr name="radius" format="dimension"/>
        <attr name="shouldAnimate" format="boolean"/>
        <attr name="checked" format="boolean"/>
        <!-- 透明度，取值0~255 -->
        <attr name="alpha" format="integer"/>
    </declare-styleable>
    <!-- com.ttsea.jlibrary.component.widget.SmoothCheckBox attrs start -->

</resources>