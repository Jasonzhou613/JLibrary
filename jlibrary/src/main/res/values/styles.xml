<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="Theme.PhotoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <!-- MyProgressDialog样式 start -->
    <style name="my_progress_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- MyProgressDialog样式 end -->

    <!-- MyDialog样式 start-->
    <style name="my_dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/jmy_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- MyDialog样式 end-->

    <!-- TransparentDialog样式 start-->
    <style name="my_transparent_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/jtransparent_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>
    <!-- TransparentDialog样式 end-->

    <!-- MyAlertDialog样式 start-->
    <style name="my_alert_dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!-- MyAlertDialog样式 end-->

    <style name="JCycleProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/jprogress_cycle_bg</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">1500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="JCycleProgressBar.Small" parent="@style/JCycleProgressBar">
        <item name="android:indeterminateDrawable">@drawable/jprogress_cycle_small_bg</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="JCycleProgressBar.Large" parent="@style/JCycleProgressBar">
        <item name="android:indeterminateDrawable">@drawable/jprogress_cycle_large_bg</item>
        <item name="android:minWidth">76dp</item>
        <item name="android:maxWidth">76dp</item>
        <item name="android:minHeight">76dp</item>
        <item name="android:maxHeight">76dp</item>
    </style>

    <style name="JHorizontalProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/jprogress_horizontal</item>
        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>