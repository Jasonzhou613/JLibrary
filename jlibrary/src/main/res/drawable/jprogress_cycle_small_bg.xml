<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thickness="1.5dp"
        android:useLevel="false">

        <gradient
            android:centerColor="@color/_j_cycle_gradient_center"
            android:centerX="0.50"
            android:centerY="0.50"
            android:endColor="@color/_j_cycle_gradient_end"
            android:startColor="@color/_j_cycle_gradient_start"
            android:type="sweep"
            android:useLevel="false"/>

    </shape>

</rotate>