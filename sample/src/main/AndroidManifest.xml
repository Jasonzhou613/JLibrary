<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ttsea.jlibrary.sample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- sd卡读写权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:name=".CApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.ttsea.jlibrary.sample.ComponentActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.ttsea.jlibrary.sample.PhotoActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.ttsea.jlibrary.sample.jasynchttp.AsyncHttpActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.ttsea.jlibrary.sample.jasynchttp.DownloadActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.ttsea.jlibrary.sample.jasynchttp.DownloadDetailActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.ttsea.jlibrary.sample.MyTimerActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.ttsea.jlibrary.sample.RoundImageActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.ttsea.jlibrary.sample.SmoothCheckBoxActivity"
            android:screenOrientation="portrait"/>


        <!--Photo Activitys start -->
        <activity
            android:name="com.ttsea.jlibrary.photo.select.ImageSelectorActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"/>

        <activity
            android:name="com.ttsea.jlibrary.photo.select.ImagePreviewActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"/>

        <activity
            android:name="com.ttsea.jlibrary.photo.crop.CropActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar">
            <intent-filter>
                <action android:name="com.ttsea.photo.crop.action.CROP"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="image/*"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.ttsea.jlibrary.photo.gallery.GalleryActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar">
            <intent-filter>
                <action android:name="com.ttsea.photo.crop.action.GALLERY"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="image/*"/>
            </intent-filter>
        </activity>
        <!--Photo Activitys end -->

    </application>

</manifest>