<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <com.ttsea.jlibrary.component.widget.ToggleButton
            android:id="@+id/tbtn01"
            android:layout_width="52dp"
            android:layout_height="30dp"
            android:layout_margin="16dp"/>

        <com.ttsea.jlibrary.component.widget.ToggleButton
            android:id="@+id/tbtn02"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:padding="16dp"
            app:tbAnimate="true"
            app:tbAsDefaultOn="false"
            app:tbBorderWidth="5dp"
            app:tbOffBorderColor="@color/red"
            app:tbOffColor="@color/blue"
            app:tbOnColor="@color/yellow"
            app:tbSpotColor="@color/zAA66CC"/>

        <com.ttsea.jlibrary.component.widget.ToggleButton
            android:id="@+id/tbtn03"
            android:layout_width="100dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            app:tbAnimate="true"
            app:tbAsDefaultOn="true"
            app:tbBorderWidth="1px"
            app:tbOffBorderColor="@color/gainsboro"
            app:tbOffColor="@color/red"
            app:tbOnColor="@color/z33B5E5"
            app:tbSpotColor="@color/white"/>

        <com.ttsea.jlibrary.component.widget.JellyToggle.JellyToggleButton
            android:id="@+id/jtbtn"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            app:jtbBackgroundMeasureRatioValue="1.0"
            app:jtbBackgroundRadius="12dp"
            app:jtbBezierScaleRatioValue="0.45"
            app:jtbColorChangeType="rgb"
            app:jtbDraggable="true"
            app:jtbDuration="300"
            app:jtbEaseType="linear"
            app:jtbJelly="itself"
            app:jtbLeftBackgroundColor="@color/z33B5E5"
            app:jtbLeftText="ON"
            app:jtbLeftTextSize="12sp"
            app:jtbLeftThumbColor="@color/green"
            app:jtbMoveToSameStateCallListener="false"
            app:jtbRightBackgroundColor="@color/lightGrey"
            app:jtbRightText="OFF"
            app:jtbRightTextSize="12sp"
            app:jtbRightThumbColor="@color/red"
            app:jtbStretchDistanceRatioValue="0.2"
            app:jtbTextMarginRight="8dp"
            app:jtbThumbRadius="30dp"
            app:jtbTouchMoveRatioValue="3.0"
            app:paddingEnd="20dp"
            app:paddingStart="20dp"/>

    </LinearLayout>
</ScrollView>